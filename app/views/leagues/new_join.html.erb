  <div class="container-fluid">

  <h1>Join League - <%= @league.name %></h1>

  	<%= bootstrap_form_with(scope: :join_league, url: join_path, local: true) do |form| %>

    	<div class="form-group">
        <%= form.text_field :name, class: "form-control", label: "Team Name" %>
    	</div>

      <% if @league.is_private %>
      	<div class="form-group">
      		<%= form.text_field :password, class: "form-control" %>
          <small id="passwordHelpBlock" class="form-text text-muted">
            Enter the password provided by the commisioner
          </small>
      	</div>
    	<% end %> 

    	<div class="form-group">
      	<%= form.submit "Join League"%>
    	</div>
  	<% end %>
  </div>
	
	<%= link_to 'Back', :back, :class => "btn" %>
