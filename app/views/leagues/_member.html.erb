<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#leagueInfo">League Info</a></li>
  <% if @league.owner_id == session[:user_id] %>
	  <li><a data-toggle="tab" href="#leagueSettings"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> League Settings</a></li>
	<% end %>
  <li><a data-toggle="tab" href="#standings">Standings</a></li>
</ul>

<div class="tab-content">
  <div id="leagueInfo" class="tab-pane fade in active">
    <%= render 'league_info' %>
  </div>
  <div id="leagueSettings" class="tab-pane fade">
  	<% if @league.owner_id == session[:user_id] %>
  		<%= render 'league_settings' %>
  	<% end %>
	</div>
  <div id="standings" class="tab-pane fade">
  	<div class="container-fluid">
	  	<h3>Standings</h3>
	    <div class="table-responsive">
		    <table class="table table-striped table-hover">
		    	<thead>
	          <tr>
	          	<th>Rank</th>
	            <th>Team Name</th>
	            <th>User Name</th>
	            <th>Score</th>
	          </tr>
	        </thead>
	        <tbody>
	        	<% @teams_in_league.each_with_index do |team, index| %>
	        		<% if session[:user_id] == team.user_id %>
	        			<tr class="info">
	        		<% else %>
	        			<tr>
	        		<% end %>
	        			<td><%= index + 1 %></td>
	        			<td><%= team.name %></td>
	        			<td><%= team.uname %></td>
	        			<td>placeholder</td>
	        		</tr>
	        	<% end %>
	        </tbody>
		    </table>
		  </div>
		</div>
	</div>
</div>