<div class="container-fluid">
	
	<h1>Login</h1>

	<%= bootstrap_form_tag(url: '/login') do |form| %>

  	<div class="form-group">
      <%= form.text_field :email, class: "form-control"%>
  	</div>

  	<div class="form-group">
      <%= form.password_field :password, class: "form-control"%>
  	</div>

  	<div class="form-group">
      <%= form.submit "Submit" %>
  	</div>

	<% end %>
</div>